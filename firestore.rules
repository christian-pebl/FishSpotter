rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Videos are public and can be read by anyone.
    match /videos/{videoId} {
      allow read: if true;
      // Only admin backend processes should write to videos.
      allow write: if false; 
    }

    // Users can read all user profiles, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Tags can be read by any authenticated user.
    // Users can create, update, and delete their own tags.
    match /tags/{tagId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}