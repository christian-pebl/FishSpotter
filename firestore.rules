rules_version = '2';

// Note: These are STORAGE rules, not Firestore rules.
// You must copy and paste these into the "Rules" tab of the
// **Storage** section in your Firebase Console.
service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to write to the 'videos' folder.
    // And allow any authenticated user to read videos.
    match /videos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   // Optional: limit file size to <500 MB
                   && request.resource.size < 500 * 1024 * 1024
                   && request.resource.contentType.matches('video/.*');
    }
  }
}
