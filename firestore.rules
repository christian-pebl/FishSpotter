rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading the entire videos collection for anyone,
    // but only authenticated users can write.
    match /videos/{videoId} {
      allow list, get: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read the users collection.
    // Users can only write to their own document.
    match /users/{userId} {
      allow list, get: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    
    // Allow authenticated users to read the tags collection.
    // Users can only create, update, or delete their own tags.
    match /tags/{tagId} {
      allow list, get: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
